{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes{% endblock %}

{% block body %}
    <p>Plus de <strong>{{ totalTime }} heures</strong> de recette de cuisine !</p><br />

    <a class="btn btn-outline-success" href="{{ path('recipe.create') }}">Ajouter une recette</a>

    <table class="table mt-3">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>
                    <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.title }}</a>
                </td>
                <td>
                    <a class="btn btn-primary me-2" href="{{ path('recipe.edit', {id: recipe.id}) }}">Editer</a>
                    <a class="btn btn-danger" href="{{ path('recipe.edit', {id: recipe.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}